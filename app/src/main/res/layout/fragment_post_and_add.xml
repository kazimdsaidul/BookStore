<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.login.reg_login.PostAndAddFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/etName"
        android:layout_marginLeft="27dp"
        android:layout_width="299dp"
        android:hint="Name"
        android:layout_height="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="302dp"
        android:layout_height="49dp"
        android:hint="Phone"
        android:inputType="number"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:hint="Address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/etPhone"
        android:layout_marginLeft="27dp" />

    <TextView
        android:id="@+id/tvSelectBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Books:"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvPDF"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Upload PDF:"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectBooks"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="301dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:textColor="#FAFA"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPDF"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:text="Cancel"
        android:textColor="#FF0000"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvdatainfirebase"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:textColor="#000"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="107dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAddress" />
</android.support.constraint.ConstraintLayout>

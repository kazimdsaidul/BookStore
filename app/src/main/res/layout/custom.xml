<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAddressDisplay"
        android:layout_width="236dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="42dp"
        android:textSize="15dp"
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/ivbook"
        android:layout_width="358dp"
        android:layout_height="136dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/book_image"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMail" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="98dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:text="Name     :"
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tvNameDisplay"
        android:layout_width="239dp"
        android:textColor="#000"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.304" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="94dp"
        android:layout_height="25dp"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Address :"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:text="call"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnMail"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:text="Send mail"
        android:layout_marginEnd="61dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@+id/btnCall"
        android:layout_marginLeft="12dp" />

    <View
        android:id="@+id/viewline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFavourate" />

    <Button
        android:id="@+id/btnFavourate"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay"
        app:layout_constraintLeft_toRightOf="@+id/tvOnFavourate"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/tvOnFavourate"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:text="On Favourate: "
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="108dp"
        android:layout_height="95dp"
        android:text="Download"
        android:background="#FAFAFA"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/download1"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay"
        app:layout_constraintLeft_toRightOf="@+id/btnFavourate"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="260dp" />


</android.support.constraint.ConstraintLayout>